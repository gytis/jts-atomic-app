{
  "apiVersion": "v1",
    "kind": "Pod",
    "metadata": {
      "labels": {
          "app": "jts"
      },
      "name": "jts"
    },
    "spec": {
      "containers": [
        {
          "image": "$jacorb_image",
          "name": "jacorb-name-server",
          "ports": [
            {
              "containerPort": 3528,
              "hostPort": $jacorb_host_port,
              "protocol": "TCP"
            }
          ]
        },
        {
          "image": "$jts_image",
          "ports": [
            {
              "containerPort": 4711,
              "hostPort": $jts_host_port,
              "protocol": "TCP"
            }
          ],
          "env": [
            {
              "name": "JACORB_NAME_SERVER_IP",
              "value": "127.0.0.1",
            },
            {
              "name": "JACORB_NAME_SERVER_ENV_NAME_SERVER_PORT",
              "value": "3528"
            }
          ]
        }
      ]
    }
}
